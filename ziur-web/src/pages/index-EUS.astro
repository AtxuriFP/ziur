---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="SBT Course Completion Certificates">
	<main>
		<div class="logo-container">
			<img
				src="/logo-ziur.png"
				alt="ZIUR Logo"
				class="custom-logo"
				width="200"
				height="200"
			/>
		</div>
		<h1>Ongi etorri <span class="text-gradient">Soulbound Token bidezko</span> gaitasun profesionalen ziurtapen atarira</h1>
		<p class="instructions">
			ZIUR euskal Lanbide Heziketan bultzatutako ziurtapen sistema da.
			Igorri, egiaztatu eta kudeatu era seguruan Blockchain bidezko ziurtagiriak.
		</p>
		<div class="partner-logos">
			<img
				src="/logo_nuevo-white.png"
				alt="CIFP Emilio Campuzano LHII"
				class="partner-logo"
			/>
			<img
				src="/FP-AndraMari-LH-blanco.png"
				alt="CIFP Andra Mari LHII"
				class="partner-logo"
			/>
			<img
				src="/ehu.jpg"
				alt="Euskal Herriko Unibertsitatea"
				class="partner-logo"
			/>
			<img
				src="/p4q.png"
				alt="P4Q"
				class="partner-logo"
			/>
		</div>
		<ul role="list" class="link-card-grid">
			<Card
				href="/admin/dashboard"
				title="Admin Dashboard"
				body="Kudeatu kurtsoak, igorri ziurtagiriak eta ikusi sistemaren estatistikak."
			/>
			<Card
				href="/verify"
				title="Egiaztatu ziurtagiria"
				body="Egiaztatu gaitasun profesionalen ziurtagiriaren benekotasuna."
			/>
			<Card
				href="/mint"
				title="Minteatu ziurtagiriak"
				body="Ikasleek lortutako ziurtagiriak minteatu ditzakete sinatutako eskariak erabiliz."
			/>
			<Card
				href="https://github.com/yourusername/sbt-certificates"
				title="GitHub Repositorioa"
				body="Ikusi iturr-kodea eta egin ekarpenak proiektuari."
			/>
		</ul>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	.logo-container {
		display: flex;
		justify-content: center;
		align-items: center;
		margin-bottom: 2rem;
	}
	.custom-logo {
		max-width: 100%;
		height: auto;
	}
	.sbt-logo {
		margin: 0 auto;
		display: block;
	}
	.partner-logos {
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 2rem;
		margin: 2rem 0;
	}
	.partner-logo {
		max-width: 150px;
		height: auto;
	}
	h1 {
		font-size: 3rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-top: 1em;
		margin-bottom: 1em;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		border-radius: 8px;
		text-align: center;
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>